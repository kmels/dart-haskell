                    -- filesystem
                      , filepath ==1.3.*
                      , cmdargs >= 0.10 
                      , process-conduit >= 0.5
                    -- common
                      , array >= 0.4 
                      , random >= 1.0
                      , primitive >= 0.5.0
                      , time >= 1.4
                    -- core utils
                      , zenc >= 0.1
                      , parsec >= 3.1.2
                    -- data structures
                      , hashtables >= 1.0.1.8
                    -- control
                      , transformers >= 0.3
                      , mtl >= 2.1.1
                    -- text
                      , utf8-string >= 0.3.7

  build-tools:         happy
  Hs-source-dirs:   src
